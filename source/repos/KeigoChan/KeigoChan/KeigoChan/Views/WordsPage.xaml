<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeigoChan.Views.WordsPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="InputWord" Placeholder="書きます" Text="{Binding CompletedWord}"/>
            <Label x:Name="RespectfulWord" Text="{Binding RespectfulEnding}" />
            <Label x:Name="Humbleword" Text="{Binding HumbleEnding}"/>
            <Button x:Name="Button" Text="Click me!" Command="{Binding CompletedCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>